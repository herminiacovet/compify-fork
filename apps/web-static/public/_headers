# Cloudflare Pages Cache Headers for Compify Static Site

# Static assets with content hashing - cache indefinitely
/_assets/*
  Cache-Control: public, max-age=31536000, immutable
  X-Content-Type-Options: nosniff

# Favicon - long-term caching
/favicon.ico
  Cache-Control: public, max-age=31536000
  X-Content-Type-Options: nosniff

/favicon.svg
  Cache-Control: public, max-age=31536000
  X-Content-Type-Options: nosniff

# CSS and JS files with hashing - cache indefinitely
/*.css
  Cache-Control: public, max-age=31536000, immutable
  X-Content-Type-Options: nosniff

/*.js
  Cache-Control: public, max-age=31536000, immutable
  X-Content-Type-Options: nosniff

# Images - long-term caching
/*.png
  Cache-Control: public, max-age=31536000, immutable
  X-Content-Type-Options: nosniff

/*.jpg
  Cache-Control: public, max-age=31536000, immutable
  X-Content-Type-Options: nosniff

/*.jpeg
  Cache-Control: public, max-age=31536000, immutable
  X-Content-Type-Options: nosniff

/*.gif
  Cache-Control: public, max-age=31536000, immutable
  X-Content-Type-Options: nosniff

/*.svg
  Cache-Control: public, max-age=31536000, immutable
  X-Content-Type-Options: nosniff

/*.webp
  Cache-Control: public, max-age=31536000, immutable
  X-Content-Type-Options: nosniff

# Fonts - long-term caching
/*.woff
  Cache-Control: public, max-age=31536000, immutable
  X-Content-Type-Options: nosniff

/*.woff2
  Cache-Control: public, max-age=31536000, immutable
  X-Content-Type-Options: nosniff

/*.ttf
  Cache-Control: public, max-age=31536000, immutable
  X-Content-Type-Options: nosniff

/*.eot
  Cache-Control: public, max-age=31536000, immutable
  X-Content-Type-Options: nosniff

# HTML pages - moderate caching with CDN edge caching
/*.html
  Cache-Control: public, max-age=3600, s-maxage=7200
  X-Content-Type-Options: nosniff
  X-Frame-Options: DENY
  X-XSS-Protection: 1; mode=block
  Referrer-Policy: strict-origin-when-cross-origin

# Root HTML files
/
  Cache-Control: public, max-age=3600, s-maxage=7200
  X-Content-Type-Options: nosniff
  X-Frame-Options: DENY
  X-XSS-Protection: 1; mode=block
  Referrer-Policy: strict-origin-when-cross-origin

# Manifest and service worker - short-term caching
/manifest.json
  Cache-Control: public, max-age=3600
  X-Content-Type-Options: nosniff

/sw.js
  Cache-Control: public, max-age=3600
  X-Content-Type-Options: nosniff

# Robots and sitemap - moderate caching
/robots.txt
  Cache-Control: public, max-age=86400
  X-Content-Type-Options: nosniff

/sitemap.xml
  Cache-Control: public, max-age=86400
  X-Content-Type-Options: nosniff