# Compify MVP Headers Configuration
# Security and performance headers for all routes

# Security headers for all pages
/*
  X-Frame-Options: DENY
  X-Content-Type-Options: nosniff
  X-XSS-Protection: 1; mode=block
  Referrer-Policy: strict-origin-when-cross-origin
  Permissions-Policy: camera=(), microphone=(), geolocation=()
  Strict-Transport-Security: max-age=31536000; includeSubDomains

# Cache headers for design system
/shared/design-system/*
  Cache-Control: public, max-age=31536000, immutable
  Access-Control-Allow-Origin: *

/design-system/*
  Cache-Control: public, max-age=31536000, immutable
  Access-Control-Allow-Origin: *

# Cache headers for sandbox assets
/sandbox/assets/*
  Cache-Control: public, max-age=31536000, immutable

/sandbox/*.js
  Cache-Control: public, max-age=31536000, immutable

/sandbox/*.css
  Cache-Control: public, max-age=31536000, immutable

# Sandbox main page
/sandbox/
  Cache-Control: public, max-age=3600

/sandbox/index.html
  Cache-Control: public, max-age=3600

# API and Auth routes - no caching, security headers
/auth/*
  X-Robots-Tag: noindex
  Cache-Control: no-cache, no-store, must-revalidate
  
/api/*
  X-Robots-Tag: noindex
  Cache-Control: no-cache, no-store, must-revalidate

# Static assets with content hashing - cache indefinitely
/_assets/*
  Cache-Control: public, max-age=31536000, immutable

# Favicon - long-term caching
/favicon.ico
  Cache-Control: public, max-age=31536000

/favicon.svg
  Cache-Control: public, max-age=31536000

# CSS and JS files with hashing - cache indefinitely
/*.css
  Cache-Control: public, max-age=31536000, immutable

/*.js
  Cache-Control: public, max-age=31536000, immutable

# Images - long-term caching
/*.png
  Cache-Control: public, max-age=31536000, immutable

/*.jpg
  Cache-Control: public, max-age=31536000, immutable

/*.jpeg
  Cache-Control: public, max-age=31536000, immutable

