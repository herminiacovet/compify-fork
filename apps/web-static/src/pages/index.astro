---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
---

<Layout title="Compify - The Ultimate Programming Competition Platform">
  <Navigation slot="header" />
  
  <section class="hero">
    <div class="container">
      <div class="text-center py-16">
        <h1 class="text-5xl font-bold mb-6 text-hero-primary">Welcome to Compify</h1>
        <p class="text-xl mb-8 max-w-2xl mx-auto text-hero-secondary">
          Join the ultimate programming competition platform where developers worldwide 
          showcase their skills, compete in exciting challenges, and push the boundaries of code.
        </p>
        <div class="flex gap-4 justify-center flex-wrap">
          <a href="/auth/register" class="btn btn-primary btn-lg">Get Started</a>
          <a href="/about/" class="btn btn-outline btn-lg">Learn More</a>
        </div>
      </div>
    </div>
  </section>
  
  <section class="section bg-gray-50">
    <div class="container">
      <h2 class="text-4xl font-bold text-center mb-12 text-primary">Why Choose Compify?</h2>
      <div class="grid md:grid-cols-3 gap-8">
        <div class="card text-center">
          <div class="card-body">
            <h3 class="text-xl font-semibold mb-4 text-primary">Competitive Coding</h3>
            <p class="text-secondary">Challenge yourself with algorithmic problems and compete against the best developers.</p>
          </div>
        </div>
        <div class="card text-center">
          <div class="card-body">
            <h3 class="text-xl font-semibold mb-4 text-primary">Real-time Leaderboards</h3>
            <p class="text-secondary">Track your progress and see how you rank against other participants in real-time.</p>
          </div>
        </div>
        <div class="card text-center">
          <div class="card-body">
            <h3 class="text-xl font-semibold mb-4 text-primary">Interactive Games</h3>
            <p class="text-secondary">Enjoy coding-themed mini-games and interactive challenges in our sandbox environment.</p>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>
