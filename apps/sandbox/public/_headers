# Cloudflare Pages Cache Headers for Compify Sandbox

# Static assets with content hashing - cache indefinitely
/assets/*
  Cache-Control: public, max-age=31536000, immutable
  X-Content-Type-Options: nosniff

# JavaScript files - cache indefinitely with hashing
/*.js
  Cache-Control: public, max-age=31536000, immutable
  X-Content-Type-Options: nosniff

# CSS files - cache indefinitely with hashing
/*.css
  Cache-Control: public, max-age=31536000, immutable
  X-Content-Type-Options: nosniff

# Game assets - long-term caching
/*.png
  Cache-Control: public, max-age=31536000, immutable
  X-Content-Type-Options: nosniff

/*.jpg
  Cache-Control: public, max-age=31536000, immutable
  X-Content-Type-Options: nosniff

/*.jpeg
  Cache-Control: public, max-age=31536000, immutable
  X-Content-Type-Options: nosniff

/*.gif
  Cache-Control: public, max-age=31536000, immutable
  X-Content-Type-Options: nosniff

/*.svg
  Cache-Control: public, max-age=31536000, immutable
  X-Content-Type-Options: nosniff

/*.webp
  Cache-Control: public, max-age=31536000, immutable
  X-Content-Type-Options: nosniff

# Audio files for games
/*.mp3
  Cache-Control: public, max-age=31536000, immutable
  X-Content-Type-Options: nosniff

/*.ogg
  Cache-Control: public, max-age=31536000, immutable
  X-Content-Type-Options: nosniff

/*.wav
  Cache-Control: public, max-age=31536000, immutable
  X-Content-Type-Options: nosniff

# JSON data files
/*.json
  Cache-Control: public, max-age=86400
  X-Content-Type-Options: nosniff

# Main HTML file - short-term caching
/index.html
  Cache-Control: public, max-age=3600
  X-Content-Type-Options: nosniff
  X-Frame-Options: SAMEORIGIN
  X-XSS-Protection: 1; mode=block
  Referrer-Policy: strict-origin-when-cross-origin

# Root path
/
  Cache-Control: public, max-age=3600
  X-Content-Type-Options: nosniff
  X-Frame-Options: SAMEORIGIN
  X-XSS-Protection: 1; mode=block
  Referrer-Policy: strict-origin-when-cross-origin

# Manifest file
/manifest.json
  Cache-Control: public, max-age=3600
  X-Content-Type-Options: nosniff